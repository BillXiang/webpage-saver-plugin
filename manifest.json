{
    "manifest_version": 2,
    "name": "Webpage Saver",
    "version": "1.0",
    "description": "Save the current web page as a single HTML file and set the save directory.",
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        },
        "default_title": "Save Webpage",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
